{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "packageManager": "npm",
    "analytics": false
  },
  "newProjectRoot": "projects",
  "projects": {
    "prism-lib": {
      "projectType": "library",
      "root": "projects/prism-lib",
      "sourceRoot": "projects/prism-lib/src",
      "prefix": "prism",
      "architect": {
        "build": {
          "builder": "@angular/build:ng-packagr",
          "configurations": {
            "production": {
              "tsConfig": "projects/prism-lib/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/prism-lib/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular/build:karma",
          "options": {
            "tsConfig": "projects/prism-lib/tsconfig.spec.json"
          }
        },
        "storybook": {
          "builder": "@storybook/angular:start-storybook",
          "options": {
            "configDir": ".storybook",
            "browserTarget": "showcase-app:build",
            "port": 6006,
            "compodoc": false,
            "styles": [
              "projects/prism-lib/src/styles/main.scss"
            ]
          }
        },
        "build-storybook": {
          "builder": "@storybook/angular:build-storybook",
          "options": {
            "configDir": ".storybook",
            "browserTarget": "showcase-app:build",
            "outputDir": "dist/storybook",
            "compodoc": false,
            "styles": [
              "projects/prism-lib/src/styles/main.scss"
            ]
          }
        }
      }
    },
    "showcase-app": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "projects/showcase-app",
      "sourceRoot": "projects/showcase-app/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "outputPath": "dist/showcase-app",
            "index": "projects/showcase-app/src/index.html",
            "browser": "projects/showcase-app/src/main.ts",
            "polyfills": [
              "zone.js"
            ],
            "tsConfig": "projects/showcase-app/tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "projects/showcase-app/public"
              }
            ],
            "styles": [
              "projects/showcase-app/src/styles.scss"
            ]
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kB",
                  "maximumError": "1MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "4kB",
                  "maximumError": "8kB"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "showcase-app:build:production"
            },
            "development": {
              "buildTarget": "showcase-app:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular/build:extract-i18n"
        },
        "test": {
          "builder": "@angular/build:karma",
          "options": {
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ],
            "tsConfig": "projects/showcase-app/tsconfig.spec.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "projects/showcase-app/public"
              }
            ],
            "styles": [
              "projects/showcase-app/src/styles.scss"
            ]
          }
        }
      }
    }
  }
}